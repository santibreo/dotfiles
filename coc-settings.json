{
    // globals
    "coc.preferences.formatOnSaveFiletypes": [
        "css",
        "markdown",
        "javascript",
        "graphql",
        "html",
        "yaml",
        "json",
        "python"
    ],
    // diagnosis
    "diagnostic.refreshAfterSave": true,
    "diagnostic.errorSign": "‚õî",
    "diagnostic.warningSign": "üëÅ",
    "diagnostic.infoSign": "‚ùî",
    "diagnostic.hintSign": "„Ä∞",
    // suggestions
    "suggest.minTriggerInputLength": 2,
    "suggest.snippetIndicator": "[+]",
    "suggest.removeDuplicateItems": true,
    "suggest.detailField": "preview",
    "suggest.labelMaxLength": 50,
    "suggest.enablePreview": true,
    "list.maxHeight": 15,
    // python config
    "python.jediEnabled": false,
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "~/.local/lib/python3.7/site-packages/black.py",
    "python.formatting.blackArgs": [
        "-l 79"
    ],
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.pylintPath": "~/.local/lib/python3.7/site-packages/pylint/epylint.py",
    "python.venvFolders": [
        ".virtualenvs",
        "../venv",
        ".pyenv"
    ],
    // Code Snippets
    "snippets.ultisnips.enable": true,
    "snippets.userSnippetsDirectory": "~/.vim/ultisnips"
}
