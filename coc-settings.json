{
    // globals
    "coc.preferences.formatOnSaveFiletypes": [
        "css",
        "markdown",
        "javascript",
        "graphql",
        "html",
        "yaml",
        "json"
    ],
    // diagnosis
    "diagnostic.refreshAfterSave": true,
    "diagnostic.errorSign": "XX",
    "diagnostic.warningSign": "!!",
    "diagnostic.infoSign": "--",
    "diagnostic.hintSign": ">>",
    // suggestions
    "suggest.minTriggerInputLength": 2,
    "suggest.snippetIndicator": "[+]",
    "suggest.removeDuplicateItems": true,
    "suggest.detailField": "preview",
    "suggest.labelMaxLength": 50,
    "suggest.enablePreview": true,
    // python config
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "~/.local/lib/python3.7/site-packages",
    "python.formatting.blackArgs": [
        "-l 79"
    ],
    "python.linting.enabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Path": "~/.local/lib/python3.7/site-packages",
    "python.venvPath": "~/.virtualenvs",
    // Code Snippets
    "snippets.ultisnips.enable": true,
    "snippets.userSnippetsDirectory": "~/.vim/ultisnips"
}
