#
# ~/.bashrc
#

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

# Cool prompt
#PS1='[\[\033[01;32m\]\u\[\033[01;31m\]@\[\033[01;34m\]\h\[\033[00m\]] \[\033[01;31m\]\W\n\[\033[01;31m\]\$ \[\033[00m\]'
PS1="\[$(tput bold)\][\[$(tput sgr0)\]\[\033[38;5;196m\]\h\[$(tput sgr0)\]\[$(tput bold)\]@\[$(tput sgr0)\]\[\033[38;5;12m\]\u\[$(tput sgr0)\]\[$(tput bold)\]]\[$(tput sgr0)\] \[$(tput sgr0)\]\[\033[38;5;7m\]\W\[$(tput sgr0)\]\n\\$ \[$(tput sgr0)\]"


# Global variables
#export EDITOR='vim'
#export VIMHOME="$HOME/.vim"
export PATH="$HOME/.local/bin:$PATH"
# Where to look for python
export PYENV="/usr/"

# Alias
alias ls='ls --color=auto'
alias dmenu_run="dmenu_run -fn 'Inconsolata 9'"
alias sdn='shutdown now'
#alias sdn='sudo poweroff'       # (Artix) Shutdown now without problems
alias gv='nvim-qt'
alias cls='clear'               # Too many Windows hours
alias pubssh='cat ~/.ssh/id_rsa.pub | xclip -selection clipboard'
alias pydeactivate="source $HOME/.bashrc && deactivate"

# Python virtualenvs
function pyactivate() {
    export PYENV="$HOME/.virtualenvs/$1"
    source $PYENV/bin/activate
}

function pycreate() {
    python -m venv ~/.virtualenvs/$1
    pyactivate $1
}

function pydelete() {
    rm -rf ~/.virtualenvs/$1
}

alias pyenvs="ls -1 ~/.virtualenvs"
alias pyreqs="pip freeze > requirements.txt"
